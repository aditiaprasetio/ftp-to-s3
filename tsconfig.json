{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@aditiaprasetio/uploader": [
        "libs/uploader/src"
      ],
      "@aditiaprasetio/uploader/*": [
        "libs/uploader/src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}